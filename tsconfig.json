{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "lib": ["ESNext"],
        "strict": true,
        "noImplicitOverride": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "dist"]
}
